<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!--?android:attr/listSeparatorTextViewStyle"-->
        <TextView
            android:id="@+id/patient_separator"
            style="@style/MyListSeparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/patient_separator"/>
        <View
            style="@style/DividerLine" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <View
                android:id="@+id/person_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_person" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="20dp"
                android:text="A. van der Klooster"
                android:textSize="18sp"
                android:textAlignment="textStart" />

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:labelFor="@+id/patient_id"
            android:text="@string/patient_id_input_dialog"/>

        <EditText
            android:id="@+id/patient_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/devices_separator"
            style="@style/MyListSeparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/devices_separator"/>
        <View
            style="@style/DividerLine" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <View
                android:id="@+id/status_icon"
                style="@style/StatusCircle"
                android:layout_gravity="start"
                android:background="@drawable/status_disconnected" />

            <TextView
                android:id="@+id/deviceName_label"
                style="@style/DeviceNameColumn"
                android:layout_gravity="center_vertical|start"
                android:text="@string/emptyText" />

        </GridLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sync_separator"
            style="@style/MyListSeparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sync_separator"/>
        <View
            style="@style/DividerLine" />

        <GridLayout
            android:id="@+id/sync_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:id="@+id/sync_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/sync_default" />

            <ImageButton
                android:id="@+id/sync_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="end"
                android:contentDescription="@string/sync_button_description"
                android:src="@drawable/ic_sync" />

        </GridLayout>

    </LinearLayout>

</LinearLayout>